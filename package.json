{
  "name": "personal-page",
  "version": "0.0.0",
  "author": "Joshua Chen <sidachen2003@gmail.com>",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node --loader=ts-node/esm --no-warnings=ExperimentalWarning server/index.ts",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --ssr src/server-entry.tsx --outDir dist/server",
    "build": "vite build --outDir dist/static && yarn build:server && node --loader=ts-node/esm --no-warnings=ExperimentalWarning server/pre-render.ts",
    "serve": "NODE_ENV=production node --loader=ts-node/esm --no-warnings=ExperimentalWarning server/index.ts",
    "preview": "vite preview",
    "format": "prettier -w .",
    "lint": "eslint \"**/*.{js,ts,jsx,tsx}\"",
    "spellcheck": "cspell \"**\" --no-progress",
    "prepare": "husky install"
  },
  "packageManager": "yarn@4.0.0",
  "devDependencies": {
    "@types/color": "^3.0.5",
    "@types/express": "^4",
    "@types/node": "^20.8.9",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "cspell": "^7.3.8",
    "eslint": "^8.52.0",
    "eslint-config-jc": "^3.0.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "express": "^4.18.2",
    "glob": "^10.3.10",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "prettier-config-jc": "^2.3.0",
    "ts-node": "^10.9.1",
    "tsconfig-jc": "^2.3.1",
    "typescript": "^5.2.2",
    "typescript-plugin-css-modules": "^5.0.2"
  },
  "dependencies": {
    "@mdx-js/react": "^3.0.0",
    "@mdx-js/rollup": "^3.0.0",
    "@vitejs/plugin-react": "^4.1.0",
    "clsx": "^2.0.0",
    "color": "^4.2.3",
    "copy-text-to-clipboard": "^3.2.0",
    "github-slugger": "^2.0.0",
    "hast-util-to-text": "^4.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.17.0",
    "react-tooltip": "^5.22.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.0",
    "remark-mdx-frontmatter": "^4.0.0",
    "vite": "^4.5.0",
    "vite-plugin-svgr": "^4.1.0"
  }
}
